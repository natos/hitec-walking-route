{
  "name": "hitec-walking-route",
  "private": true,
  "version": "0.1.0",
  "description": "Create walking routes with Hi-Tec",
  "repository": "https://github.com/Spaaza/hitec-walking-route",
  "licenses": [],
  "engines": {
    "node": "5.9.1"
  },
  "peerDependencies": {
    "angular": "@>=1.3 <1.6",
    "angular-animate": "^@>=1.3 <1.6",
    "angular-aria": "@>=1.3 <1.6",
    "angular-messages": "@>=1.3 <1.6"
  },
  "dependencies": {
    "angular": "^1.5.5",
    "angular-animate": "^1.5.5",
    "angular-aria": "^1.5.5",
    "angular-material": "git+https://github.com/angular/bower-material.git#master",
    "angular-messages": "^1.5.5",
    "angular-sanitize": "^1.5.5"
  },
  "devDependencies": {
    "angular-mocks": "^1.4.9",
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.13.0",
    "glob": "^7.0.5",
    "html-minifier": "^2.1.6",
    "jshint": "^2.9.2",
    "json-concat": "0.0.1",
    "live-server": "^0.9.1",
    "nodemon": "^1.9.2",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "uglify-js": "^2.6.4",
    "watch": "^0.19.1",
    "yamljs": "^0.2.8"
  },
  "scripts": {
    "start": "npm run watch & npm run serve",
    "build": "npm run build:assets && npm run build:templates && npm run build:content && npm run build:js && npm run build:css && npm run build:css:autoprefixer",
    "watch": "npm run watch:content & npm run watch:templates & npm run watch:css & npm run watch:js",

    "lint:js": "jshint app/src/*.js",

    "build:assets": "rm -rf app/assets/* && cp -R assets/* app/assets/",
    "build:js": "uglifyjs node_modules/angular/angular.js node_modules/angular-sanitize/angular-sanitize.js node_modules/angular-animate/angular-animate.js node_modules/angular-aria/angular-aria.js node_modules/angular-material/angular-material.js src/*.js -o app/js/hitec.min.js -v --wrap --screw-ie8",
    "build:css": "cleancss -o app/css/hitec.min.css node_modules/angular-material/angular-material.css css/app.css",
    "build:css:autoprefixer": "postcss --use autoprefixer app/css/*.css -d app/css",
    "build:templates": "node ./build/build-templates.js",
    "build:content": "node ./build/build-content.js",

    "watch:js": "nodemon --watch 'src' -e 'js' --exec 'npm run build:js'",
    "watch:css": "nodemon --watch 'css' -e 'css' --exec 'npm run build:css'",
    "watch:templates": "nodemon --watch 'js' -e 'html' --exec 'npm run build:templates && npm run build:js'",
    "watch:content": "nodemon --watch 'content' -e 'yaml' --exec 'npm run build:content && npm run build:js'",

    "serve": "browser-sync start --no-notify --s 'app' --ss 'app/assets' --files 'app/*'"
  }
}
