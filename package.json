{
  "name": "hitec-walking-route",
  "private": true,
  "version": "0.1.0",
  "description": "Create walking routes with Hi-Tec",
  "repository": "https://github.com/Spaaza/hitec-walking-route",
  "licenses": [],
  "engines": {
    "node": "5.9.1"
  },
  "peerDependencies": {
    "angular": "@>=1.3 <1.6",
    "angular-animate": "^@>=1.3 <1.6",
    "angular-aria": "@>=1.3 <1.6",
    "angular-messages": "@>=1.3 <1.6"
  },
  "dependencies": {
    "angular": "^1.5.5",
    "angular-animate": "^1.5.5",
    "angular-aria": "^1.5.5",
    "angular-material": "git+https://github.com/angular/bower-material.git#master",
    "angular-messages": "^1.5.5",
    "angular-sanitize": "^1.5.5"
  },
  "devDependencies": {
    "angular-mocks": "^1.4.9",
    "autoprefixer": "^6.3.6",
    "express": "^4.14.0",
    "glob": "^7.0.5",
    "jshint": "^2.9.2",
    "json-concat": "0.0.1",
    "live-server": "^0.9.1",
    "postcss": "^5.0.21",
    "postcss-cli": "^2.5.2",
    "uglify-js": "^2.6.4",
    "watch": "^0.19.1",
    "yamljs": "^0.2.8"
  },
  "scripts": {
    "prestart": "npm update && npm run build:content && npm run build:js && npm run build:css && npm run build:css:autoprefixer",
    "start": "live-server ./app/ --watch ./app/dist && npm run watch:js && npm run watch:content && npm run watch:css",
    "lint:js": "jshint app/src/*.js",
    "build:js": "uglifyjs node_modules/angular/angular.js node_modules/angular-sanitize/angular-sanitize.js node_modules/angular-animate/angular-animate.js node_modules/angular-aria/angular-aria.js node_modules/angular-material/angular-material.js app/src/*.js -o app/dist/hitec.min.js -c --wrap --screw-ie8",
    "build:css": "cleancss -o app/dist/hitec.min.css node_modules/angular-material/angular-material.css app/assets/app.css",
    "build:css:autoprefixer": "postcss --use autoprefixer app/dist/*.css -d app/dist",
    "build:content": "node ./scripts/build-content.js",
    "watch:js": "watch build:js app/src/",
    "watch:css": "watch build:css app/assets/app.css",
    "watch:content": "watch build:content content/"
  }
}
